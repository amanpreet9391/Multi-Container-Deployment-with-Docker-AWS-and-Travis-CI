{
    "AWSEBDockerrunversion": 2,
    "containerDefinitions" : [
        {
            "name" : "client",
            "image" : "amanpreet9391/multi-client",
            "hostname" : "client",
            "essential" :false,
            "memory" : 128


        },
        {
            "name" : "server",
            "image" : "amanpreet9391/multi-server",
            "hostname" : "api",
            "essential" :false,
            "memory" : 128


        },

        {
            "name" :"worker",
            "image" : "amanpreet9391/multi-worker",
            "hostname" : "worker",
            "essential" :false,
            "memory" : 128

        },
        {
            "name" :"nginx",
            "image" :"amanpreet9391/multi-nginx",
            "hostname" :"nginx" ,
            "essential" : true,
            "memory" : 128,
            "portMappings" : [
                {
                    "hostPort":80,
                    "containerPort" :80
                }
            ],
            "links": ["client","server"]


        }
    ]

}